<% if current_user.is_admin? or current_user.id == @review.user_id %>

<div class="container-fluid">

  <br>

  <div class="review-form">

    <div class="card text-center center" style="max-width: 80%;">
      <div class="card-header text-bold" style="font-size: xx-large;">
        Modifica recensione
      </div>
      <div class="card-body">

        <%= form_with model: [ @review.course, @review ] do |f| %>

          <div class="mb-3">
            <%= f.label(:comments, "Commento",:class=>"form-label") %><br />
            <%= f.text_area(:comments, autofocus: true, autocomplete: "Commento", :class=>"form-control center", :style=>"width: 30rem; max-width: 80%;") %>
          </div>

          <div class="mb-3">
            <%= f.label(:stelle, "Voto", :class=>"form-label") %><br />
            <%= f.range_field(:stelle, :min=>"1",:max=>"10", :class=>"form-control-range center", :style=>"width: 30rem; max-width: 80%;") %>
          </div>

          <%= f.submit("Salva modifiche", :class=>"btn btn-primary") %>
          <%= link_to("Indietro", :back, :class=>"btn btn-secondary") %>

        <% end %>

  
      </div>
    </div>

  </div>

</div>

<br><br><br>

<% end %>

<% if current_user.is_gymClient? and current_user.id != @review.user_id and current_user.is_admin? == false %>
<h1 class="ban-msg">Non hai i permessi per visualizzare questa pagina</h1>
<%= link_to("Indietro", :back, :class=>"btn btn-secondary center") %>
<% end %>


