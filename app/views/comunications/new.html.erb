<% if current_user.is_admin? %>

<div class="container-fluid">

  <br>

  <div class="course-form">

    <div class="card text-center center" style="max-width: 80%;">
      <div class="card-header text-bold" style="font-size: xx-large;">
        Crea comunicazione
      </div>
      <div class="card-body">

        <%= form_with model: @comunication do |f| %>

          <div class="mb-3">
            <%= f.label(:description, "Testo", :class=>"form-label") %><br />
            <%= f.text_area(:description, autofocus: true, autocomplete: "Descrizione", :class=>"form-control center", :style=>"width: 30rem; max-width: 50%;") %>
          </div>

          <%= f.submit("Pubblica", :class=>"btn btn-primary") %>
          <%= link_to("Indietro", :back, :class=>"btn btn-secondary") %>

        <% end %>

  
      </div>
    </div>

  </div>

</div>


<% end %>


<% if current_user.is_gymClient? and current_user.is_admin? == false %>
<h1 class="ban-msg">Non hai i permessi per visualizzare questa pagina</h1>
<div class="ban-btn">
  <%= link_to("Indietro", :back, :class=>"btn btn-secondary ban-btn") %>
</div>
<% end %>


