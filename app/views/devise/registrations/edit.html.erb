<!--- <h2>Modifica <%= resource_name.to_s.humanize %></h2> --->
<h2>Modifica profilo</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome, autofocus: true, autocomplete: "nome" %>
  </div>

  <div class="field">
    <%= f.label :cognome %><br />
    <%= f.text_field :cognome, autofocus: true, autocomplete: "cognome" %>
  </div>

  <div class="field">
    <%= f.label :cellulare %><br />
    <%= f.text_field :cellulare, autofocus: true, autocomplete: "cellulare" %>
  </div>

  <div class="field">
    <%= f.label :eta %><br />
    <%= f.text_field :eta, autofocus: true, autocomplete: "eta" %>
  </div>

  <div class="actions">
    <%= f.submit "Aggiorna profilo" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Insoddisfatto? <%= button_to "Cancella profilo", registration_path(resource_name), data: { confirm: "Sei sicuro?" }, method: :delete %></p>

<%= link_to "Indietro", :back %>
