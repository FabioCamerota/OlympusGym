<div class="container-fluid">
  <br>
  <div class="row">
    <div class="col-lg-8">
      <h2 class="text-bold" style="margin-left: 10%;">Corsi offerti da OlympusGym</h2>
      <br>
      <table style="width: 80%;" class="table table-hover table-secondary center">
        <thead class="table-dark">
          <th>Nome</th>
          <th>Giorno</th>
        </thead>
        <tbody>
          <% courses = Course.all %>
          <% courses.each do |course| %>
            <tr>
              <td> <%= course.nome %> </td>
              <td> <%= course.giorno %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-lg-4">
      <div class="login-form">
        <div class="card text-center center" style="max-width: 90%;">
          <div class="card-header text-bold" style="font-size: xx-large;">
            Accedi
          </div>
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="mb-3">
                <%= f.label(:email, :class=>"form-label") %><br />
                <%= f.email_field(:email, :class=>"form-control") %>
              </div>

              <div class="mb-3">
                <%= f.label(:password, :class=>"form-label") %><br />
                <%= f.password_field(:password, :class=>"form-control") %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-check float-center">
                  <div class="row">
                    <div class="col-5">
                      <%= f.check_box(:remember_me, :class=>"form-check-input float-end", :value=>"") %>
                    </div>
                    <div class="col-7">
                      <%= f.label(:remember_me, "Ricordami", :class=>"form-check-label float-start") %>
                    </div>
                  </div>
                </div>
              <% end %>

              <br>
              <%= f.submit("Login", :class=>"btn btn-primary") %>
            <% end %>
            <br><br>
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to("Registrati", new_registration_path(resource_name), :class=>"btn btn-success") %><br />
            <% end %>
            <br>
            <%- if devise_mapping.omniauthable? %>
              <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to("Accedi con Google", omniauth_authorize_path(resource_name, provider), method: :post, :class=>"btn btn-outline-dark", 
              :role=>"button", :style=>"text-transform:none; display:inline; ") %><br />
              <% end %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<br><br><br> <hr> <br><br><br>


